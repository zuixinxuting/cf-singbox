# http://editorconfig.org
root = true

# Unix 风格的换行符，每个文件末尾都有一个换行符
[*]
indent_style = tab
end_of_line = lf
# 使用括号扩展符号匹配多个文件
# 设置默认字符集
[*.{js,ts,jsx,tsx,json.yaml}]
charset = utf-8
# 4 个空格缩进
[*.{js,ts,jsx,tsx,json,yaml}]
indent_style = space
indent_size = 4
# 制表符缩进（未指定大小）
[Makefile]
indent_style = tab
